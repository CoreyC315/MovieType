generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// This defines your 'Movie' table
model Movie {
  id    Int     @id @default(autoincrement())
  code  String  @unique
  name  String
  genre String
  year  Int
  description String?
}
